<Page x:Class="WpfApp1.welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="welcome">

    <Grid Margin="0,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="149*"/>
            <RowDefinition Height="160*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF15D1CA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="stuff" Background="#FF79F9F4" HorizontalAlignment="Left" Margin="240,35,0,0" FontSize="44" VerticalAlignment="Top" Width="348" Click="Button_Click_1" Grid.Row="1"/>
        <Button Content="manegar" Background="#FF79F9F4" HorizontalAlignment="Left" Margin="240,33,0,0" VerticalAlignment="Top" FontSize="44" Width="348" Click="Button_Click" Grid.Row="2"/>
        <Label Content="welcome" Foreground="Snow" HorizontalAlignment="Center" FontSize="84" VerticalAlignment="Center"/>
    </Grid>
</Page>
